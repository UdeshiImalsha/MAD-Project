<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AdminAddNewProductActivity">

    <ImageView
        android:id="@+id/select_book_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/select_product_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_book_image"
        android:inputType="textMultiLine"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:hint="     Book Title..."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/input_design"
        />


    <EditText
        android:id="@+id/book_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_name"
        android:inputType="textMultiLine"
        android:layout_marginTop="6dp"
        android:padding="25dp"
        android:hint="Book Description..."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/input_design"
        />


    <EditText
        android:id="@+id/book_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_description"
        android:inputType="textMultiLine"
        android:layout_marginTop="6dp"
        android:padding="6dp"
        android:hint="      Book Price..."
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        />


    <Button
        android:id="@+id/add_new_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_price"
        android:text="Add Book"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:padding="8dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/buttons"
        />

</RelativeLayout>