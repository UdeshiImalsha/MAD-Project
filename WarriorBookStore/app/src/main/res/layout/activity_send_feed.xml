<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SendFeedActivity">

    <TextView
        android:id="@+id/logo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="140dp"
        android:fontFamily="@font/amarante"
        android:text="Feedback"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/feedback_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_title"
        android:background="@drawable/input_design"
        android:padding="6dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Full Name"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="19sp"
        />

    <EditText
        android:id="@+id/feedback_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_username_input"
        android:background="@drawable/input_design"
        android:padding="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Phone"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="19sp"
        android:layout_marginTop="6dp"
        />

    <TextView
        android:id="@+id/ratebar_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="Rate Us"
        android:textSize="18sp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@+id/feedback_phone_input"
        />

    <RatingBar
        android:id="@+id/feedback_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratebar_txtView"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:background="@color/ic_banner_background"
        android:backgroundTint="@color/ic_banner_background"
        android:foregroundTint="#F6EDED"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/feedrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback_rating"
        android:layout_marginStart="100dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="100dp"
        android:gravity="clip_horizontal"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <EditText
        android:id="@+id/feedback_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedrate"
        android:background="@drawable/input_design"
        android:padding="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Feedback"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="19sp"
        android:layout_marginTop="6dp"
        />


    <Button
        android:id="@+id/send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_message_input"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Send Feedback"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Next"
        android:textColor="@android:color/white"
        />

</RelativeLayout>